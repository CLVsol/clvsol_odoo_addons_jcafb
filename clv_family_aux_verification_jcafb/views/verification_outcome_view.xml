<odoo>
        
    <record id="clv_family_aux_view_form_verification_outcome" model="ir.ui.view">
        <field name="name">clv.family_aux.form</field>
        <field name="model">clv.family_aux</field>
        <field name="inherit_id" ref="clv_family_aux.clv_family_aux_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Verification Outcomes">
                    <group>
                        <group>
                            <field name="count_verification_outcomes"/>
                        </group>
                        <group>
                            <button name="clv_verification.clv_verification_outcome_action"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-list"
                                    context="{'search_default_model': 'clv.family_aux', 'search_default_res_id': id}"
                                    attrs="{'invisible': [('verification_outcome_ids', '=', [])]}"
                                    >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="count_verification_outcomes_2"/>
                                    </span>
                                    <span class="o_stat_text"> Verification Outcome(s)</span>
                                </div>
                            </button>
                        </group>
                    </group>
                    <field name="verification_outcome_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_family_aux_view_tree_verification_outcome" model="ir.ui.view">
        <field name="name">clv.family_aux.tree</field>
        <field name="model">clv.family_aux</field>
        <field name="inherit_id" ref="clv_family_aux.clv_family_aux_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="count_verification_outcomes"/>
            </field>
        </field>
    </record>

</odoo>
