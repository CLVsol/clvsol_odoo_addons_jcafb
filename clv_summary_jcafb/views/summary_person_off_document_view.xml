<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="clv_summary_person_off_document_view_form" model="ir.ui.view">
            <field name="name">clv.summary.person.off.document.form</field>
            <field name="model">clv.summary.person.off.document</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="summary_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="person_off_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="document_off_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="document_off_state"/>
                            <field name="document_off_global_tag_ids" widget="many2many_tags" options="{'no_open': False, 'no_create': True}"/>
                        </group>
                        <notebook>
                            <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="True">
                                <group name="settings">
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="clv_summary_person_off_document_view_tree" model="ir.ui.view">
            <field name="name">clv.summary.person.off.document.tree</field>
            <field name="model">clv.summary.person.off.document</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree name="person_off_documents" string="Person Documents">
                    <field name="summary_id" invisible="True"/>
                    <field name="person_off_id" invisible="True"/>
                    <field name="document_off_id"/>
                    <field name="document_off_state"/>
                    <field name="document_off_global_tag_ids"/>
                </tree>
            </field>
        </record>
        
        <record id="clv_summary_person_off_document_view_tree_state" model="ir.ui.view">
            <field name="name">clv.summary.person.off.document.tree</field>
            <field name="model">clv.summary.person.off.document</field>
            <field name="inherit_id" ref="clv_summary_person_off_document_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree name="person_off_documents" position="attributes">
                    <attribute name="decoration-muted">document_off_state=='new'</attribute>
                    <attribute name="decoration-success">document_off_state=='archived'</attribute>
                    <attribute name="decoration-primary">document_off_state in('waiting','returned')</attribute>
                    <attribute name="decoration-danger">document_off_state=='discarded'</attribute>
                    <attribute name="decoration-it">document_off_state in('new','discarded')</attribute>
                    <attribute name="decoration-bf">document_off_state in('returned','archived')</attribute>
                </tree>
            </field>
        </record>

        <record id="clv_summary_person_off_document_view_search" model="ir.ui.view">
            <field name="name">clv.summary.person.off.document.search</field>
            <field name="model">clv.summary.person.off.document</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Person Documents">
                    <field name="summary_id"/>
                    <field name="person_off_id"/>
                    <field name="document_off_id"/>
                    <field name="document_off_state"/>
                    <field name="document_off_global_tag_ids"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Summary" domain="[]" context="{'group_by':'summary_id'}"/>
                        <filter string="Person (Off)" domain="[]" context="{'group_by':'person_off_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="clv_summary_view_form_summary_person_off_document" model="ir.ui.view">
            <field name="name">clv.summary.form</field>
            <field name="model">clv.summary</field>
            <field name="inherit_id" ref="clv_summary.clv_summary_view_form"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <group name="group_bottom" position="inside">
                    <field name="summary_person_off_document_ids" colspan="4" nolabel="0" attrs="{'invisible':[('is_person_off_summary', '!=', True)]}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
