<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="clv_person_document_setup_view_form" model="ir.ui.view">
            <field name="name">clv.person.document_setup.form</field>
            <field name="model">clv.person.document_setup</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_right">
                    </div>
                    <label for="person_ids"/>
                    <field name="person_ids" options="{'no_open': False, 'no_create': True}"/>
                    <label for="survey_ids"/>
                    <field name="survey_ids" options="{'no_open': False, 'no_create': True}"/>
                    <group>
                        <group>
                            <field name="category_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="date_foreseen"/>
                            <field name="date_deadline"/>
                            <field name="history_marker_id" options="{'no_open': False, 'no_create': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button 
                            type="object"
                            name="do_person_document_setup"
                            string="Person Document Set Up"
                            class="oe_highlight"
                            />
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>

        <!-- More button Action -->
        <act_window 
            id="clv_person_document_setup_action"
            name="Person Document Set Up"
            src_model="clv.person"
            res_model="clv.person.document_setup"
            view_mode="form, tree"
            key2="client_action_multi"
            target="new"
        />

    </data>
</odoo>
