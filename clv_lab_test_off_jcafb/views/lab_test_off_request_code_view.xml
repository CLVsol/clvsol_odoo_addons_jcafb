<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="clv_lab_test_off_request_code_view_form" model="ir.ui.view">
            <field name="name">clv.lab_test.off.request.code.form</field>
            <field name="model">clv.lab_test.off.request.code</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                    <header name="header">
                        <!-- To add buttons and status widget -->
                    </header>
                    <sheet name="lab_test_off_request_code">
                        <div name="button_box" class="oe_right oe_button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="clv_base.group_reguser">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div name="center" class="oe_center">
                            <label for="code" class="oe_edit_only"/>
                            <h1><field name="code" default_focus="1" placeholder="Code..."/></h1>
                        </div>
                        <group>
                            <group name="lab_test_off_request_code">
                                <field name="code_sequence" invisible="True"/>
                                <field name="off_instance_id" options="{'no_open': False, 'no_create': True}"/>
                                <field name="lab_test_off_request_id" options="{'no_open': False, 'no_create': True}"/>
                            </group>
                        </group>
                        <field name="notes" placeholder="Notes..." colspan="4"/>
                        <notebook>
                            <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="True">
                                <group name="settings">
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="clv_lab_test_off_request_code_view_tree" model="ir.ui.view">
            <field name="name">clv.lab_test.off.request.code.tree</field>
            <field name="model">clv.lab_test.off.request.code</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree name="lab_test_off_requests" string="Persons (Off)">
                    <field name="code"/>
                    <field name="off_instance_id"/>
                    <field name="lab_test_off_request_id"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <record id="clv_lab_test_off_request_code_view_search" model="ir.ui.view">
            <field name="name">clv.lab_test.off.request.code.search</field>
            <field name="model">clv.lab_test.off.request.code</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="off_instance_id"/>
                    <field name="lab_test_off_request_id"/>
                    <separator/>
                    <filter name="filter_used" string="Used" domain="[('lab_test_off_request_id','!=',False)]"/>
                    <filter name="filter_not_used" string="Not Used" domain="[('lab_test_off_request_id','=',False)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group name="group_by" expand="0" string="Group By...">
                        <filter string="Off Instance" context="{'group_by': 'off_instance_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="clv_lab_test_off_request_code_action" model="ir.actions.act_window">
            <field name="name">Lab Test (Off) Request Codes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv.lab_test.off.request.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="clv_lab_test_off_request_code_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new lab test (off) request code.
              </p>
            </field>
        </record>
        
    </data>
</odoo>
