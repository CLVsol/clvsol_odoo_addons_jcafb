<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="clv_lab_test_off_request_view_form_state" model="ir.ui.view">
            <field name="name">clv.lab_test.off.request.form</field>
            <field name="model">clv.lab_test.off.request</field>
            <field name="inherit_id" ref="clv_lab_test_off.clv_lab_test_off_request_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <header name="header" position="inside">
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,done,tested,cancelled"/>
                    <button name="action_draft" type="object"
                            string="Draft"
                            attrs="{'invisible':[('state','not in',['cancelled'])]}"
                            groups="clv_lab_test_off.group_manager"/>
                    <button name="action_test" type="object"
                            string="Test"
                            attrs="{'invisible':[('state','not in',['draft'])]}"
                            groups="clv_lab_test_off.group_manager"/>
                    <button name="action_done" type="object"
                            string="Done"
                            attrs="{'invisible':[('state','not in',['tested'])]}"
                            groups="clv_lab_test_off.group_manager"/>
                    <button name="action_cancel" type="object"
                            string="Cancel"
                            attrs="{'invisible':[('state','not in',['draft','tested'])]}"
                            groups="clv_lab_test_off.group_manager"/>
               </header>
            </field>
        </record>

        <record id="clv_lab_test_off_request_view_tree_state" model="ir.ui.view">
            <field name="name">clv.lab_test.off.request.tree</field>
            <field name="model">clv.lab_test.off.request</field>
            <field name="inherit_id" ref="clv_lab_test_off.clv_lab_test_off_request_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state"/>
                </field>
                <tree name="lab_test_off)requests" position="attributes">
                    <attribute name="decoration-muted">state=='draft'</attribute>
                    <attribute name="decoration-primary">state in('tested')</attribute>
                    <attribute name="decoration-success">state=='done'</attribute>
                    <attribute name="decoration-danger">state=='cancelled'</attribute>
                    <attribute name="decoration-it">state in('draft','cancelled')</attribute>
                    <attribute name="decoration-bf">state in('tested')</attribute>
                </tree>
            </field>
        </record>

        <record id="clv_lab_test_off_request_view_search_state" model="ir.ui.view">
            <field name="name">clv.lab_test.off.request.search</field>
            <field name="model">clv.lab_test.off.request</field>
            <field name="inherit_id" ref="clv_lab_test_off.clv_lab_test_off_request_view_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state"/>
                </field>
                <group name="group_by" position="inside">
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </field>
        </record>

    </data>
</odoo>
