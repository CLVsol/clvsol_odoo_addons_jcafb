<odoo>

    <record id="clv_lab_test_report_view_form_file_system" model="ir.ui.view">
        <field name="name">clv.lab_test.report.form</field>
        <field name="model">clv.lab_test.report</field>
        <field name="inherit_id" ref="clv_lab_test.clv_lab_test_report_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <group name="group_right" position="inside">
                <!--field name="file_name" invisible="1"/-->
                <field name="file_name"/>
                <field name="file_content" filename="file_name"/>
                <!--field name="stored_file_name" invisible="1"/-->
                <field name="stored_file_name"/>
                <!--field name="directory_id" options="{'no_open': False, 'no_create': True}" invisible="1"/-->
                <field name="directory_id" options="{'no_open': False, 'no_create': True}"/>
            </group>
        </field>
    </record>

    <record id="clv_lab_test_report_view_tree_file_system" model="ir.ui.view">
        <field name="name">clv.lab_test.report.tree</field>
        <field name="model">clv.lab_test.report</field>
        <field name="inherit_id" ref="clv_lab_test.clv_lab_test_report_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="date_report" position="after">
                <field name="file_name" invisible="1"/>
                <field name="file_content" filename="file_name" widget="binary"/>
                <field name="stored_file_name" invisible="1"/>
                <field name="directory_id" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="clv_lab_test_result_view_form_file_system" model="ir.ui.view">
        <field name="name">clv.lab_test.result.form</field>
        <field name="model">clv.lab_test.result</field>
        <field name="inherit_id" ref="clv_lab_test.clv_lab_test_result_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <group name="group_right" position="inside">
                <!--field name="file_name" invisible="1"/-->
                <field name="file_name"/>
                <field name="file_content" filename="file_name"/>
                <!--field name="stored_file_name" invisible="1"/-->
                <field name="stored_file_name"/>
                <!--field name="directory_id" options="{'no_open': False, 'no_create': True}" invisible="1"/-->
                <field name="directory_id" options="{'no_open': False, 'no_create': True}"/>
            </group>
        </field>
    </record>

    <record id="clv_lab_test_result_view_tree_file_system" model="ir.ui.view">
        <field name="name">clv.lab_test.result.tree</field>
        <field name="model">clv.lab_test.result</field>
        <field name="inherit_id" ref="clv_lab_test.clv_lab_test_result_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="date_result" position="after">
                <field name="file_name" invisible="1"/>
                <field name="file_content" filename="file_name" widget="binary"/>
                <field name="stored_file_name" invisible="1"/>
                <field name="directory_id" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
