<odoo>
        
    <record id="clv_address_view_form_community_member" model="ir.ui.view">
        <field name="name">clv.address.form</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Communities (*)">
                    <group>
                        <field name="_count_communities"/>
                        <field name="community_member_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_address_view_tree_community_member" model="ir.ui.view">
        <field name="name">clv.address.tree</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <!--field name="code" position="after"-->
            <field name="name" position="after">
                <field name="_count_communities"/>
            </field>
        </field>
    </record>

</odoo>
