<odoo>
        
    <record id="clv_family_off_view_form_document" model="ir.ui.view">
        <field name="name">clv.family_off.form</field>
        <field name="model">clv.family_off</field>
        <field name="inherit_id" ref="clv_family_off.clv_family_off_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Documents">
                    <group>
                        <field name="count_documents"/>
                    </group>
                    <field name="document_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_family_off_view_tree_document" model="ir.ui.view">
        <field name="name">clv.family_off.tree</field>
        <field name="model">clv.family_off</field>
        <field name="inherit_id" ref="clv_family_off.clv_family_off_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="count_documents"/>
            </field>
        </field>
    </record>

</odoo>
