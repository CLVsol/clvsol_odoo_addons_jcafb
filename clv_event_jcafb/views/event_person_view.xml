<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="clv_event_person_view_form" model="ir.ui.view">
            <field name="name">clv.event.person.form</field>
            <field name="model">clv.event.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" class="oe_right oe_button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="clv_base.group_reguser">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="event_id" options="{'no_open': False, 'no_create': True}"/>
                                <field name="person_id" options="{'no_open': False, 'no_create': True}"/>
                                <field name="role_id" default_focus="1" options="{'no_open': False, 'no_create': True}"/>
                            </group>
                        </group>
                        <label for="notes" class="oe_edit_only"/>
                        <field name="notes" placeholder="Notes..."/>
                        <notebook>
                            <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="True">
                                <group name="settings">
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="clv_event_person_view_tree" model="ir.ui.view">
            <field name="name">clv.event.person.tree</field>
            <field name="model">clv.event.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="event_id"/>
                    <field name="person_id"/>
                    <field name="role_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="clv_event_person_view_search" model="ir.ui.view">
            <field name="name">clv.event.person.search</field>
            <field name="model">clv.event.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search>
                    <field name="event_id"/>
                    <field name="person_id"/>
                    <field name="role_id"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Event" domain="[]" context="{'group_by':'event_id'}"/>
                        <filter string="Person" domain="[]" context="{'group_by':'person_id'}"/>
                        <filter string="Person Role" domain="[]" context="{'group_by':'role_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="clv_event_person_action" model="ir.actions.act_window">
            <field name="name">Event Persons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv.event.person</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="clv_event_person_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new event person.
              </p>
            </field>
        </record>
        
        <record id="clv_event_view_form_person" model="ir.ui.view">
            <field name="name">clv.event.form</field>
            <field name="model">clv.event</field>
            <field name="inherit_id" ref="clv_event.clv_event_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Persons">
                        <field name="person_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

        <record id="clv_person_view_form_event_person" model="ir.ui.view">
            <field name="name">clv.person.form</field>
            <field name="model">clv.person</field>
            <field name="inherit_id" ref="clv_person.clv_person_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Events">
                        <field name="event_person_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
