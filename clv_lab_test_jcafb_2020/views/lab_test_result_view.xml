<odoo>
        
    <record id="clv_lab_test_result_view_form_lab_test_result" model="ir.ui.view">
        <field name="name">clv.lab_test.result.form</field>
        <field name="model">clv.lab_test.result</field>
        <field name="inherit_id" ref="clv_lab_test.clv_lab_test_result_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <group name="group_top" position="after">
                <button
                    type="action"
                    name="%(clv_lab_test_result_edit_ecp20_action)d"
                    string="Lab Test Result Edit (ECP20)"
                    class="oe_stat_button"
                    icon="fa-edit"
                    help="Lab Test Result Edit"
                    attrs="{'invisible': [('lab_test_type_code', '!=', 'ECP20')]}"
                />
                <separator/>
                <button
                    type="action"
                    name="%(clv_lab_test_result_copy_to_report_ecp20_action)d"
                    string="Lab Test Result Copy to Report (ECP20)"
                    class="oe_stat_button"
                    icon="fa-edit"
                    help="Lab Test Result Copy to Report"
                    attrs="{'invisible': [('lab_test_type_code', '!=', 'ECP20')]}"
                />
                <separator/>
            </group>
        </field>
    </record>
   
</odoo>
