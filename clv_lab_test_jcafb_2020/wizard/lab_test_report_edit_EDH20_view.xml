<odoo>

    <record id="clv_lab_test_report_edit_view_form_jcafb_EDH20" model="ir.ui.view">
        <field name="name">clv.lab_test.report.edit.form</field>
        <field name="model">clv.lab_test.report.edit</field>
        <field name="inherit_id" ref="clv_lab_test.clv_lab_test_report_edit_view_form"/>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <group  name="group_top" position="after">
                <group attrs="{'invisible':[('is_EDH20', '=', False)]}">
                    <field name="is_EDH20" invisible="True"/>
                    <group string='Medidas Antropométricas'>
                        <field name="EDH20_peso"/>
                        <field name="EDH20_altura"/>
                        <field name="EDH20_circ_abdominal"/>
                    </group>
                    <group string='Medidas da Pressão Arterial'>
                        <field name="EDH20_pa"/>
                        <field name="EDH20_PAS"/>
                        <field name="EDH20_PAD"/>
                    </group>
                    <group string='Glicemia e Colesterolemia'>
                        <field name="EDH20_glicemia"/>
                        <field name="EDH20_colesterol"/>
                    </group>
                    <field name="EDH20_obs"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
